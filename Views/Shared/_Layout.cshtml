            <ul class="dropdown-menu">
                <li><a href="#">Вера в Бога</a></li>
                <li><a href="#">Вера в Ангелов</a></li>
                <li><a href="#">Вера в Небесные Книги</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
            </ul>
        </div> <!-- .btn-group -->
        <div class="btn-group">
            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"
                    onclick="location.href='@Url.Action("Articles", "Home", new { Id = "Stati" })'">
                Статьи
            </button>
        </div> <!-- .btn-group -->
        <div class="btn-group">
            <button class="btn btn-success dropdown-toggle" data-toggle="dropdown" data-hover="dropdown"
                    onclick="location.href='@Url.Action("Hadithes", "Home", new { Id = "Hadisy" })'">
                Хадисы
            </button>
        </div> <!-- .btn-group -->*@
        <div class="btn-group">
            <form class="navbar-form navbar-left" role="form" id="SearchForm" method="post" action="~/Home/SearchResult">
                <div class="form-group">
                    <input type="text" id="SearchTextId" lang="ru" name="SearchText" class="form-control" placeholder="Поиск по Корану">
                </div>
                <button type="submit" lang="ru" onclick = "showPageLoadingSpinner()" class="btn btn-default" id="submit">Поиск</button>
            </form>
        </div>
        <div class="btn-group">
            <a href="http://koran.site/en" title="Перевод Корана на английском">Eng</a>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p class="p-footer">
                    Веб сайт Koran.site доступен с мобильных устройств<br />
                    &copy; @DateTime.Now.Year&nbsp;<a href="mailto:info@koran.site" target="_top">info@koran.site</a></br>
                </p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
   
