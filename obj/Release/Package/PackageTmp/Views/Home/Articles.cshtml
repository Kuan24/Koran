@model PagedList.IPagedList<Islam.Articles>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<table class="table">

    @foreach (var item in Model)
    {
        string textpart = item.ArticleText;
        <tr>
            <td>
                <h2>@Html.Raw(item.ArticleTitle)</h2>
                <div class="ayats-in-table">
                    @Html.Raw(string.Format(textpart.Substring(0, 350)))...@Html.ActionLink("читать далее", "ArticleText", new { Id = item.A_Id }, null)
                </div>
            </td>
        </tr>
    }

</table>
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Articles", new { page }))

