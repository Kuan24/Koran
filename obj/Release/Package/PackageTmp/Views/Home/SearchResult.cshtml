@model List<Islam.Models.SearchResult>
@{
    ViewBag.Title = "Результаты поиска";
}

<h4>Результаты поиска: "@ViewBag.SearchString"</h4>

@if (Model != null)
    { 
        @:<table id="d_products_en" class="center-content">
            @:<tr>
    } 
    @if (Model != null)
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            if (i != 0 && i % 2 == 0)
            {
                @:</tr>
                @:<tr>
            }
            @:<td class="center-content">
                var item = Model[i];
                <span class="gray-text">@item.BookName</span><br />
                    <a href='@Url.Action("Index", "Home", new { id = item.B_Id, s_id = item.S_Id })'>
                    @item.SurahName
                </a><br />
                <strong>@item.AyatNumber.</strong> @item.AyatText
                <hr />
            @:</td>
        } 
    }
@if (Model != null)
{ 
    @:</tr>
@:</table>
} 

