    <hr />
    <table>
        <tr>
            <th colspan="2">@ViewBag.Book</th>
        </tr>
        @{
            int surahCount = 0;

            foreach (Surahs surah in Model.Surahs)
            {
                surahCount++;

                if (surahCount % 2 == 1)
                {
                    @:<tr class="SurahsTable">
                        @:<td>
                            @Html.ActionLink(surah.SurahName, "Index", new { Id = surah.B_B_Id, S_Id = surah.S_Id }, new { onclick = "showPageLoadingSpinner()", hreflang = "ru" })
                        @:</td>
                        }
                else
                {
                    @:<td>
                        @Html.ActionLink(surah.SurahName, "Index", new { Id = surah.B_B_Id, S_Id = surah.S_Id }, new { onclick = "showPageLoadingSpinner()", hreflang = "ru" })
                    @:</td>
                @:</tr>
                }
            }

            if (surahCount % 2 == 1)
            {
                @:<td>&nbsp;</td></tr>
            }
        }
    </table>
</div>
<div id="ayats">
    <h3 class='surah-of-day'>
        @ViewBag.SurahOfTheDay
    </h3>
    <table class="ayats-in-table">
        <tr>
            <th>
                @ViewBag.Surah
                <div class="VoImya">
                    @ViewBag.VoImya
                </div>
            </th>
        </tr>
        @foreach (Ayats ayat in Model.Ayats)
        {
            <tr>
                <td><strong>@ayat.AyatNumber.</strong> @ayat.AyatText</td>
            </tr>
        }
    </table>
</div>
